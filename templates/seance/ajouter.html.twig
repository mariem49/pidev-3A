{% extends 'base.html.twig' %}

{% block body %}
    <div class="container d-flex justify-content-center align-items-center" style="height: 100vh;">
        <div class="w-50 p-4 bg-light shadow rounded">
            <h1 class="text-center">Ajouter une s√©ance</h1>

            {{ form_start(form) }}

                {% if form.vars.errors|length > 0 %}
                    <div class="alert alert-danger">
                        <ul>
                            {% for error in form.vars.errors %}
                                <li>{{ error.message }}</li>
                            {% endfor %}
                        </ul>
                    </div>
                {% endif %}

                <div class="mb-3">
                    {{ form_label(form.date) }}
                    {{ form_widget(form.date, {'attr': {'class': 'form-control ' ~ (form.date.vars.errors|length > 0 ? 'is-invalid' : ''), 'aria-invalid': form.date.vars.errors|length > 0 ? 'true' : 'false'}}) }}
                    {% if form.date.vars.errors|length > 0 %}
                        <div class="invalid-feedback d-block">
                            {{ form_errors(form.date) }}
                        </div>
                    {% endif %}
                </div>

                <div class="mb-3">
                    {{ form_label(form.professeur) }}
                    {{ form_widget(form.professeur, {'attr': {'class': 'form-control ' ~ (form.professeur.vars.errors|length > 0 ? 'is-invalid' : ''), 'aria-invalid': form.professeur.vars.errors|length > 0 ? 'true' : 'false'}}) }}
                    {% if form.professeur.vars.errors|length > 0 %}
                        <div class="invalid-feedback d-block">
                            {{ form_errors(form.professeur) }}
                        </div>
                    {% endif %}
                </div>

                <div class="mb-3">
                    {{ form_label(form.cour) }}
                    {{ form_widget(form.cour, {'attr': {'class': 'form-control ' ~ (form.cour.vars.errors|length > 0 ? 'is-invalid' : ''), 'aria-invalid': form.cour.vars.errors|length > 0 ? 'true' : 'false'}}) }}
                    {% if form.cour.vars.errors|length > 0 %}
                        <div class="invalid-feedback d-block">
                            {{ form_errors(form.cour) }}
                        </div>
                    {% endif %}
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-success">Enregistrer</button>
                </div>

            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
