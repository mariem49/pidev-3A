<div class="card-body">
    {{ form_start(form) }}

    <div class="row mb-3">
        {{ form_label(form.content, 'Content', {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
        <div class="col-sm-10">
            {{ form_widget(form.content, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.content) }}
        </div>
    </div>

    <div class="row mb-3">
        {{ form_label(form.image, 'Image', {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
        <div class="col-sm-10">
            {{ form_widget(form.image, {'attr': {'class': 'form-control-file'}}) }}
            {{ form_errors(form.image) }}
            {% if form.image.vars.value is not empty %}
                <p>Current image: {{ form.image.vars.value }}</p>  {# Affiche l'image actuelle si déjà téléchargée #}
            {% endif %}
        </div>
    </div>

    <div class="row mb-3">
        {{ form_label(form.updateAt, 'Updated At', {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
        <div class="col-sm-10">
            {{ form_widget(form.updateAt, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.updateAt) }}
        </div>
    </div>

    <div class="row mb-3">
        {{ form_label(form.createdAt, 'Created At', {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
        <div class="col-sm-10">
            {{ form_widget(form.createdAt, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.createdAt) }}
        </div>
    </div>

    <div class="row mb-3 text-center">
        <div class="col-sm-10 offset-sm-2">
            <button type="submit" class="btn btn-primary">Create Post</button>
        </div>
    </div>

    {{ form_end(form) }}
</div>
