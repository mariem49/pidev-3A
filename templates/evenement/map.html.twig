<!DOCTYPE html>
<html lang="en">

	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>Location based on x and y</title>

		<!-- leaflet css -->
		<link rel="stylesheet" href="https://unpkg.com/leaflet@1.7.1/dist/leaflet.css"/>

		<style>
			body {
				margin: 0;
				padding: 0;
			}

			#map {
				width: 100%;
				height: 100vh;
			}
		</style>
	</head>

	<body>
		<div style="text-align: center;">
			<p style="color: red;  font-weight: bold;">localisation</p>
			<p>{{x}}
				-
				{{y}}</p>
		</div>
		<div id="map"></div>

		<!-- leaflet js -->
		<script src="https://unpkg.com/leaflet@1.7.1/dist/leaflet.js"></script>
		<script>
			// Map initialization
var x = {{ x|default(0) }};
var y = {{ y|default(0) }};

var map = L.map('map').setView([
x, y
], 6);

// osm layer
var osm = L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors'});
osm.addTo(map);

// Add a marker at the specified location
var marker = L.marker([x, y]).addTo(map);

console.log("Location based on x: " + x + " and y: " + y);
		</script>
	</body>

</html>
