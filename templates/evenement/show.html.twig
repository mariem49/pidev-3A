{% extends 'base.html.twig' %}

{% block title %}Détails de l'Événement{% endblock %}

{% block body %}
<div class="container mt-5 pt-5" style="margin-left: 10%;">
    <div class="card p-4 shadow-lg mx-auto" style="max-width: 800px;">
        <h1 class="text-center mb-4">Détails de l'Événement</h1>

        <table class="table table-bordered table-striped text-center">
            <tbody>
                <tr>
                    <th>ID</th>
                    <td>{{ evenement.id }}</td>
                </tr>
                <tr>
                    <th>Titre</th>
                    <td>{{ evenement.titre }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ evenement.description }}</td>
                </tr>
                <tr>
                    <th>Prix</th>
                    <td>{{ evenement.prix }} </td>
                </tr>
                <tr>
                    <th>Date de début</th>
                    <td>{{ evenement.dateDebut ? evenement.dateDebut|date('Y-m-d') : 'Non spécifiée' }}</td>
                </tr>
                <tr>
                    <th>Date de fin</th>
                    <td>{{ evenement.dateFin ? evenement.dateFin|date('Y-m-d') : 'Non spécifiée' }}</td>
                </tr>
                <tr>
                    <th>Localisation</th>
                    <td>
                        <a href="{{ path('app_evenement_map', {'numx': evenement.x, 'numy': evenement.y}) }}" class="btn btn-primary">
                            Afficher sur la carte
                        </a>
                    </td>
                </tr>
                <tr>
                    <th>Club Organisateur</th>
                    <td>{{ evenement.club.nom }}</td>
                </tr>
            </tbody>
        </table>

        <div class="text-center mt-4">
            <a href="{{ path('app_evenement_index') }}" class="btn btn-secondary">Retour à la liste</a>
            <a href="{{ path('app_evenement_edit', {'id': evenement.id}) }}" class="btn btn-warning">Modifier</a>
        </div>

        <div class="mt-3 text-center">
            {{ include('evenement/_delete_form.html.twig') }}
        </div>
    </div>
</div>
{% endblock %}
