{% extends 'base.html.twig' %}

{% block title %}Evenement{% endblock %}

{% block body %}
<div class="container mt-5 pt-5" style="margin-left: 10%;"> <!-- Added margin-left to shift content to the right -->
    <div class="card p-4 shadow-lg mx-auto" style="max-width: 1000px;">
        <h1 class="text-center mb-4">Evenement Details</h1>

        <table class="table table-bordered table-striped">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ evenement.id }}</td>
                </tr>
                <tr>
                    <th>Titre</th>
                    <td>{{ evenement.titre }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ evenement.description }}</td>
                </tr>
                <tr>
                    <th>Prix</th>
                    <td>{{ evenement.prix }}</td>
                </tr>
                <tr>
                    <th>Date de Début</th>
                    <td>{{ evenement.dateDebut ? evenement.dateDebut|date('Y-m-d') : '' }}</td>
                </tr>
                <tr>
                    <th>Date de Fin</th>
                    <td>{{ evenement.dateFin ? evenement.dateFin|date('Y-m-d') : '' }}</td>
                </tr>
                <tr>
                    <th>Localisation</th>
                    <td>
                        <a href="{{ path('app_evenement_map', {'numx': evenement.x, 'numy': evenement.y}) }}" class="btn btn-primary">Voir sur la carte</a>
                    </td>
                </tr>
                <tr>
                    <th>Club</th>
                    <td>{{ evenement.club.nom }}</td>
                </tr>
            </tbody>
        </table>

        <!-- Buttons to navigate back to the list or edit -->
        <div class="text-center mt-4">
            <a href="{{ path('app_evenement_index') }}" class="btn btn-secondary">Retour à la liste</a>
            <a href="{{ path('app_evenement_edit', {'id': evenement.id}) }}" class="btn btn-warning ml-2">Modifier</a>
        </div>

        <!-- Delete form inclusion -->
        <div class="text-center mt-4">
            {{ include('evenement/_delete_form.html.twig') }}
        </div>
    </div>
</div>
{% endblock %}
