<!-- Popup personnalisé pour afficher les séances -->
<div id="popupSeances" class="popup">
    <div class="popup-content">
        <span class="close-btn" onclick="closePopup()">&times;</span>
        <h5>Liste des Séances</h5>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Date</th>
                    <th>Professeur</th>
                </tr>
            </thead>
            <tbody id="popupModalSeances">
                <!-- Contenu des séances chargé dynamiquement -->
            </tbody>
        </table>
    </div>
</div>

<!-- Style pour le Popup -->
<style>
    .popup {
        display: none; /* Caché par défaut */
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.7);
        justify-content: center;
        align-items: center;
        z-index: 9999;
    }
    
    .popup-content {
        background: white;
        padding: 20px;
        border-radius: 5px;
        width: 80%;
        max-width: 800px;
        overflow-y: auto;
    }

    .close-btn {
        position: absolute;
        top: 10px;
        right: 10px;
        font-size: 24px;
        cursor: pointer;
    }
</style>

<script>
    // Fonction pour ouvrir le popup
    function showSessions(courId) {
        fetch(`/seances/cours/${courId}`)
            .then(response => response.json())
            .then(seances => {
                let tbody = document.getElementById('popupModalSeances');
                tbody.innerHTML = ''; // Nettoyer le tableau avant d'ajouter du contenu

                if (seances.length > 0) {
                    seances.forEach(seance => {
                        let row = `
                            <tr>
                                <td>${seance.id}</td>
                                <td>${seance.date}</td>
                                <td>${seance.professeur}</td>
                            </tr>
                        `;
                        tbody.innerHTML += row;
                    });
                } else {
                    tbody.innerHTML = '<tr><td colspan="3" class="text-center">Aucune séance disponible pour ce cours.</td></tr>';
                }

                // Afficher le popup
                document.getElementById('popupSeances').style.display = 'flex';
            })
            .catch(error => {
                console.error('Erreur lors du chargement des séances:', error);
                alert('Une erreur s\'est produite lors du chargement des séances pour le cours ID: ' + courId);
            });
    }

    // Fonction pour fermer le popup
    function closePopup() {
        document.getElementById('popupSeances').style.display = 'none';
    }
</script>
