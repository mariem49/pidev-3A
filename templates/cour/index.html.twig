{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-5 d-flex justify-content-center">
        <div class="w-75">
            <h1 class="text-center">Liste des cours</h1>
            <div class="text-center mb-3">
                <a href="{{ path('ajouter_cour') }}" class="btn btn-primary">Ajouter un cours</a>
            </div>
            <table class="table table-bordered table-striped text-center">
                <thead class="thead-dark">
                    <tr>
                        <th>ID</th>
                        <th>Nom</th>
                        <th>Description</th>
                        <th>Dur√©e</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for cour in cours %}
                        <tr>
                            <td>{{ cour.id }}</td>
                            <td>{{ cour.nom }}</td>
                            <td>{{ cour.description }}</td>
                            <td>{{ cour.duree }}</td>
                            <td>
                                <a href="{{ path('modifier_cour', {'id': cour.id}) }}" class="btn btn-warning btn-sm">Modifier</a>

                                <form method="post" action="{{ path('supprimer_cour', {'id': cour.id}) }}" 
                                      style="display:inline;" 
                                      onsubmit="return confirm('Voulez-vous vraiment supprimer ce cours ?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ cour.id) }}">
                                    <button type="submit" class="btn btn-danger btn-sm">Supprimer</button>
                                </form>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5" class="text-center">Aucun cours disponible.</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
