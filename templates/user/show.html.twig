{% extends 'base.html.twig' %}

{% block title %}User Details{% endblock %}

{% block body %}
    <div class="container mt-5 pt-5">
        <div class="card p-4 shadow-lg mx-auto" style="max-width: 900px;">
            <h1 class="text-center mb-4">User Details</h1>

            <table class="table table-bordered">
                <tbody>
                    <tr>
                        <th>ID</th>
                        <td>{{ user.id }}</td>
                    </tr>
                    <tr>
                        <th>Name</th>
                        <td>{{ user.name }}</td>
                    </tr>
                    <tr>
                        <th>Lastname</th>
                        <td>{{ user.lastname }}</td>
                    </tr>
                    <tr>
                        <th>Email</th>
                        <td>{{ user.email }}</td>
                    </tr>
                    <tr>
                        <th>Role</th>
                        <td>{{ user.role }}</td>
                    </tr>
                    <tr>
                        <th>Profile Picture</th>
                        <td>
                            {% if user.profilepic %}
                                <img src="{{ asset('uploads/profile_pictures/' ~ user.profilepic) }}" 
                                     class="img-fluid rounded" 
                                     alt="Profile Picture" 
                                     style="max-width: 200px; max-height: 200px;">
                            {% else %}
                                <span>No profile picture available</span>
                            {% endif %}
                        </td>
                    </tr>
                </tbody>
            </table>

            <div class="d-flex justify-content-center gap-3">
                <a href="{{ path('app_user_index') }}" class="btn btn-secondary btn-sm">Back to List</a>
                <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-warning btn-sm">Edit</a>
                {{ include('user/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}
