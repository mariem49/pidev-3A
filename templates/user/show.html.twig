{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <div class="container d-flex justify-content-center align-items-center" style="height: 100vh;">
        <div class="card p-4 w-50">
            <h1 class="text-center">User</h1>

            {% if user %}
                <table class="table">
                    <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ user.id }}</td>
                        </tr>
                        <tr>
                            <th>Name</th>
                            <td>{{ user.name }}</td>
                        </tr>
                        <tr>
                            <th>Lastname</th>
                            <td>{{ user.lastname }}</td>
                        </tr>
                        <tr>
                            <th>Email</th>
                            <td>{{ user.email }}</td>
                        </tr>
                        <tr>
                            <th>Password</th>
                            <td>***</td>  <!-- Don't display the actual password -->
                        </tr>
                        <tr>
                            <th>Role</th>
                            <td>{{ user.role }}</td>
                        </tr>
                        <tr>
                            <th>Profilepic</th>
                            <td>
                                {% if user.profilepic %}
                                    <img src="{{ asset('uploads/profile_pictures/' ~ user.profilepic) }}" alt="Profile Picture" style="width: 50px; height: 50px; object-fit: cover;">
                                {% else %}
                                    No profile picture
                                {% endif %}
                            </td>
                        </tr>
                    </tbody>
                </table>

                <a href="{{ path('app_user_index') }}" class="btn btn-secondary d-block mx-auto">Back to list</a>
                <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-primary d-block mx-auto mt-2">Edit</a>

                {{ include('user/_delete_form.html.twig') }}
            {% else %}
                <p>User not found</p>
            {% endif %}
        </div>
    </div>
{% endblock %}
