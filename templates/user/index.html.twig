{% extends 'base.html.twig' %}

{% block title %}User Index{% endblock %}

{% block body %}
    <div class="container mt-5 pt-5" style="margin-left: 10%;"> <!-- Added margin-left to shift content to the right -->
        <div class="card p-4 shadow-lg mx-auto" style="max-width: 1000px;">

            <h1 class="text-center mb-4">User Index</h1>

            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Lastname</th>
                        <th>Email</th>
                        <th class="w-50">Password</th>
                        <th>Role</th>
                        <th>Profile Picture</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for user in users %}
                        <tr>
                            <td>{{ user.id }}</td>
                            <td>{{ user.name }}</td>
                            <td>{{ user.lastname }}</td>
                            <td>{{ user.email }}</td>
                            <td style="word-wrap: break-word; max-width: 200px;">{{ user.password }}</td> <!-- Widening the password column -->
                            <td>{{ user.role }}</td>
                            <td>
                                {% if user.profilepic %}
                                    <img src="{{ asset('uploads/profile_pics/' ~ user.profilepic) }}" alt="Profile Pic" class="img-fluid" style="max-width: 50px;"/>
                                {% else %}
                                    No image
                                {% endif %}
                            </td>
                            <td>
                                <div class="d-flex justify-content-start">
                                    <a href="{{ path('app_user_show', {'id': user.id}) }}" class="btn btn-info btn-sm me-2">Show</a>
                                    <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-warning btn-sm">Edit</a>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="8" class="text-center">No records found</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>

            <div class="text-center mt-4">
                <a href="{{ path('app_user_new') }}" class="btn btn-success btn-lg">Create New User</a>
            </div>
        </div>
    </div>
{% endblock %}
