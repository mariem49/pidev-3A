<div class="card-body">

    {{ form_start(form) }}
    <form>
        <div class="row mb-3">
            <label for="inputTitle" class="col-sm-2 col-form-label">Title</label>
            <div class="col-sm-10">
                {{ form_widget(form.title) }}
                {{ form_errors(form.title) }}
            </div>
        </div>
            {{ form_widget(form._token) }} {# Ajoute le champ CSRF #}

        <div class="row mb-3">
            <label for="inputDescription" class="col-sm-2 col-form-label">Description</label>
            <div class="col-sm-10">
                {{ form_widget(form.description) }}
                {{ form_errors(form.description) }}
            </div>
        </div>

        <div class="row mb-3">
            <label for="inputCreatedAtBlog" class="col-sm-2 col-form-label">Created At</label>
            <div class="col-sm-10">
                {{ form_widget(form.createdAtBlog) }}
                {{ form_errors(form.createdAtBlog) }}
            </div>
        </div>

        <div class="row mb-3">
            <label for="inputUpdatedAtBlog" class="col-sm-2 col-form-label">Updated At</label>
            <div class="col-sm-10">
                {{ form_widget(form.updatedAtBlog) }}
                {{ form_errors(form.updatedAtBlog) }}
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-sm-10 offset-sm-2">
                <button class="btn">{{ button_label|default('Save') }}</button>
            </div>
        </div>
    </form>
    {{ form_end(form) }}

</div>
