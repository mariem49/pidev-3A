{% extends 'base.html.twig' %}

{% block title %}Blog Index{% endblock %}

{% block body %}
    <div class="container mt-5 pt-5">
        <div class="card p-4 shadow-lg mx-auto" style="max-width: 900px;">
            <h1 class="text-center mb-4">Blog Index</h1>

            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Title</th>
                        <th>Description</th>
                        <th>Created At</th>
                        <th>Updated At</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for blog in blogs %}
                        <tr>
                            <td>{{ blog.id }}</td>
                            <td>{{ blog.title }}</td>
                            <td class="text-truncate" style="max-width: 200px;">{{ blog.description }}</td>
                            <td>{{ blog.createdAtBlog ? blog.createdAtBlog|date('Y-m-d H:i:s') : '' }}</td>
                            <td>{{ blog.updatedAtBlog ? blog.updatedAtBlog|date('Y-m-d H:i:s') : '' }}</td>
                            <td>
                                <div class="d-flex justify-content-start">
                                    <a href="{{ path('app_blog_show', {'id': blog.id}) }}" class="btn btn-info btn-sm me-2">Show</a>
                                    <a href="{{ path('app_blog_edit', {'id': blog.id}) }}" class="btn btn-warning btn-sm">Edit</a>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="6" class="text-center">No records found</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>

            <div class="text-center mt-4">
                <a href="{{ path('app_blog_new') }}" class="btn btn-success btn-lg">Create New Blog</a>
            </div>
        </div>
    </div>
{% endblock %}
