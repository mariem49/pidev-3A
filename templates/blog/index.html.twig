{% extends 'base.html.twig' %}

{% block title %}Blog Index{% endblock %}

{% block body %}
<div class="container mt-5 pt-5 d-flex justify-content-center">
    <div class="card p-4 shadow-lg mx-auto" style="max-width: 1000px;">
        <h1 class="text-center mb-4">üìù Blog Index</h1>

        <!-- Barre de recherche -->
        <div class="mb-4 text-center">
            <input type="text" id="searchBlog" class="form-control shadow-sm mx-auto" placeholder="Rechercher un blog..." style="width: 300px;">
        </div>

        <!-- Statistiques -->
        <div class="card shadow-sm p-3 border-0 mx-auto mb-4 text-center" style="max-width: 450px;">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">üìä Statistiques des Blogs</h4>
            </div>
            <div class="card-body d-flex justify-content-center align-items-center">
                <canvas id="blogStatsChart" style="max-width: 100%; max-height: 240px;"></canvas>
            </div>
        </div>

        <!-- Boutons de tri -->
        <div class="mb-4 text-center">
            <div class="btn-group">
                <a href="{{ path('app_blog_index', {'sort': 'id', 'order': 'ASC'}) }}" 
                   class="btn btn-outline-primary {% if sortBy == 'id' and order == 'ASC' %}active{% endif %}">üîº ID</a>
                <a href="{{ path('app_blog_index', {'sort': 'id', 'order': 'DESC'}) }}" 
                   class="btn btn-outline-primary {% if sortBy == 'id' and order == 'DESC' %}active{% endif %}">üîΩ ID</a>
                <a href="{{ path('app_blog_index', {'sort': 'title', 'order': 'ASC'}) }}" 
                   class="btn btn-outline-info {% if sortBy == 'title' and order == 'ASC' %}active{% endif %}">üîº Titre</a>
                <a href="{{ path('app_blog_index', {'sort': 'title', 'order': 'DESC'}) }}" 
                   class="btn btn-outline-info {% if sortBy == 'title' and order == 'DESC' %}active{% endif %}">üîΩ Titre</a>
            </div>
        </div>

        <!-- Tableau des blogs -->
        <table class="table table-hover table-bordered text-center">
            <thead class="thead-dark">
                <tr class="table-primary">
                    <th>ID</th>
                    <th>Titre</th>
                    <th>Description</th>
                    <th>Cr√©√© le</th>
                    <th>Mis √† jour</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody id="blogTableBody">
                {% for blog in pagination %}
                    <tr>
                        <td>{{ blog.id }}</td>
                        <td>{{ blog.title }}</td>
                        <td class="text-truncate" style="max-width: 250px;" title="{{ blog.description }}">{{ blog.description }}</td>
                        <td>{{ blog.createdAtBlog ? blog.createdAtBlog|date('Y-m-d H:i:s') : '' }}</td>
                        <td>{{ blog.updatedAtBlog ? blog.updatedAtBlog|date('Y-m-d H:i:s') : '' }}</td>
                        <td>
                            <a href="{{ path('app_blog_show', {'id': blog.id}) }}" class="btn btn-info btn-sm mx-1">Afficher</a>
                            <a href="{{ path('app_blog_edit', {'id': blog.id}) }}" class="btn btn-warning btn-sm mx-1">Modifier</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6" class="text-center text-muted">Aucun blog trouv√©.</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        <!-- Pagination -->
        <div class="pagination justify-content-center mt-4">
            {{ knp_pagination_render(pagination) }}
        </div>

        <div class="text-center mt-4">
            <a href="{{ path('app_blog_new') }}" class="btn btn-success">‚ûï Cr√©er un Nouveau Blog</a>
            <a href="{{ path('historique_view') }}" class="btn btn-secondary">üìú Voir l'Historique</a>
        </div>
    </div>
</div>

<!-- Importation de Chart.js -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<script>
document.addEventListener("DOMContentLoaded", function() {
    var stats = {{ userStats|json_encode|raw }};
    var ctx = document.getElementById("blogStatsChart").getContext("2d");

    var labels = stats.map(item => "User " + item.user_id);
    var data = stats.map(item => item.blog_count);

    function generateRandomColors(count) {
        let colors = [];
        for (let i = 0; i < count; i++) {
            colors.push(`hsl(${Math.random() * 360}, 70%, 60%)`);
        }
        return colors;
    }

    var backgroundColors = generateRandomColors(labels.length);

    new Chart(ctx, {
        type: "pie",
        data: {
            labels: labels,
            datasets: [{
                label: "Nombre de blogs",
                data: data,
                backgroundColor: backgroundColors,
                borderWidth: 1
            }]
        },
        options: {
            responsive: true,
            plugins: {
                legend: { position: "bottom" },
                tooltip: {
                    callbacks: {
                        label: function(tooltipItem) {
                            return `${tooltipItem.label}: ${tooltipItem.raw} blogs`;
                        }
                    }
                }
            }
        }
    });
});

// Filtrer les blogs en fonction de la recherche
document.getElementById('searchBlog').addEventListener('keyup', function () {
    let query = this.value.toLowerCase();
    let rows = document.querySelectorAll("#blogTableBody tr");

    rows.forEach(row => {
        let blogId = row.querySelector("td:nth-child(1)").textContent.toLowerCase();
        let blogTitle = row.querySelector("td:nth-child(2)").textContent.toLowerCase();
        row.style.display = (blogId.includes(query) || blogTitle.includes(query)) ? "" : "none";
    });
});
</script>
{% endblock %}
