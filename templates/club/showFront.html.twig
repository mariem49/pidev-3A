{% extends 'baseFront.html.twig' %}

{% block title %}Détails du Club{% endblock %}

{% block body %}
<div class="container mt-5 pt-5" style="margin-left: 10%;">
    <div class="card p-4 shadow-lg mx-auto" style="max-width: 800px;">
        <h1 class="text-center mb-4">Détails du Club</h1>

        <table class="table table-bordered table-striped text-center">
            <tbody>
                <tr>
                    <th>ID</th>
                    <td>{{ club.id }}</td>
                </tr>
                <tr>
                    <th>Nom</th>
                    <td>{{ club.nom }}</td>
                </tr>
                <tr>
                    <th>Logo</th>
                    <td>
                        {% if club.logo %}
                            <img src="{{ asset('uploads/logos/' ~ club.logo) }}" class="img-fluid rounded" alt="Logo du Club" style="max-width: 200px; max-height: 200px;">
                        {% else %}
                            <span>Aucun logo disponible</span>
                        {% endif %}
                    </td>
                </tr>
                <tr>
                    <th>Type</th>
                    <td>{{ club.type }}</td>
                </tr>
                <tr>
                    <th>Date de création</th>
                    <td>{{ club.dateCreation ? club.dateCreation|date('Y-m-d') : 'Non spécifiée' }}</td>
                </tr>
            </tbody>
        </table>

        <div class="text-center mt-4">
            <a href="{{ path('app_club_index_front') }}" class="btn btn-secondary">Retour à la liste</a>

            <a href="{{ path('app_download_club_pdf', {'id': club.id}) }}" class="btn btn-primary">Télécharger PDF</a>
        </div>

        
    </div>
</div>
{% endblock %}
